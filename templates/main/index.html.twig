{% extends 'main/base.html.twig' %}
{% block body %}

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center mt-5">
            <div class="col-12 col-lg-6 col-md-6">
                <h1 class="display-4 text-center ">
                    {{ title }}
                </h1>

                <div class="row g-3 ">
                    <div class="col-md-5 col-lg-4 order-md-last">
                        <h4 class="d-flex justify-content-between align-items-center mb-2 mt-5">
                            <span class="text-muted">Filter</span>
                        </h4>
                        <ul class="list-group mb-3">
						
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <div>
                                        <label for="singer" class="form-label">Singer</label>
                                    </div>
                                    <select class="filter-singer form-filter">
                                        <option value="">All</option>
                                        {% for val in singers %}
                                            <option value="{{ val.singer }}">{{ val.singer }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <div>
                                        <label for="genre" class="form-label">Genre</label>
                                    </div>
                                    <select class="filter-genre form-filter">
                                        <option value="">All</option>
                                        {% for val in genres %}
                                            <option>{{ val.genre }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <div>
                                        <label for="year" class="form-label">Year</label>
                                    </div>

                                    <select class="filter-year form-filter" >
                                        <option value="">All</option>
                                        {% for val in years %}
                                            <option>{{ val.year }}</option>
                                        {% endfor %}

                                    </select>
                                </div>
                            </li>
                        </ul>
					</div>
                    <div class="col-md-7 col-lg-8">
                        <div class="row g-3">
                            <div class="table-responsive">

                                <h4 class="d-flex justify-content-between align-items-center mb-2    mt-5">
                                    <span class="text-muted">Playlist</span>
                                </h4>
                                <table id="table-id" class="table table-striped table-sm">
                                    <thead>
                                        <tr>
                                            <th>Singer <img src="{{ asset('assets/img/sort_512x512.png') }}" width="10px" alt=""></th>
                                            <th>Song <img src="{{ asset('assets/img/sort_512x512.png') }}" width="10px" alt=""></th>
                                            <th>Genre <img src="{{ asset('assets/img/sort_512x512.png') }}" width="10px" alt=""></th>
                                            <th>Year <img src="{{ asset('assets/img/sort_512x512.png') }}" width="10px" alt=""></th>
                                        </tr>
                                    </thead>
                                    <tbody  id="filter-list" class="wrapper">
                                    {% for track in tracks %}
                                            <tr data-visible="shown"
												data-singer="{{ track.singer }}"
                                                data-genre="{{ track.genre }}"
                                                data-year="{{ track.year }}"
                                            >
                                                <td id="{{ track.singer }}">{{ track.singer }}</td>
                                                <td id="{{ track.song }}">{{ track.song }}</td>
                                                <td id="{{ track.genre }}">{{ track.genre }}</td>
                                                <td id="{{ track.year }}">{{ track.year }}</td>
                                            </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
        </div>
    </div>
{% endblock  %}