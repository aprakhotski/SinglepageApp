{% extends 'main/base.html.twig' %}
{% block body %}

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center mt-5">
            <div class="col-12 col-lg-6 col-md-6">
                <h1 class="display-4 text-center ">
                    {{ title }}
                </h1>
                <input id="filter-input" class="form-control mt-5" type="text" placeholder="Filter">
                <div class="row g-3 ">
                    <div class="col-md-12 col-lg-12">
                        <div class="row g-3">
                            <div class="table-responsive">

                                <h4 class="d-flex justify-content-between align-items-center mb-2    mt-5">
                                    <span class="text-muted">Playlist</span>
                                </h4>
                                <table id="table-id" class="table table-striped table-sm">
                                    <thead>
                                        <tr>
                                            <th>Singer <img src="{{ asset('assets/img/sort_512x512.png') }}" width="10px" alt=""></th>
                                            <th>Song <img src="{{ asset('assets/img/sort_512x512.png') }}" width="10px" alt=""></th>
                                            <th>Genre <img src="{{ asset('assets/img/sort_512x512.png') }}" width="10px" alt=""></th>
                                            <th>Year <img src="{{ asset('assets/img/sort_512x512.png') }}" width="10px" alt=""></th>
                                        </tr>
                                    </thead>
                                    <tbody  id="filter-list" class="wrapper">
                                    {% for track in tracks %}
                                            <tr id="track">
                                                <td id="{{ track.singer }}">{{ track.singer }}</td>
                                                <td id="{{ track.song }}">{{ track.song }}</td>
                                                <td id="{{ track.genre }}">{{ track.genre }}</td>
                                                <td id="{{ track.year }}">{{ track.year }}</td>
                                            </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
        </div>
    </div>
{% endblock  %}